<!DOCTYPE html>
<html>

<head>
  <title>Admin Panel</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
  <div class="container bg-maroon">
    <div class="jumbotron text-center bg-maroon">
      <h1 class="display-4 text-white font-weight-bold">Welcome to the Admin Panel</h1>
      <p class="lead text-white">Manage your services with ease.</p>
    </div>
  </div>

  <style>
    body {
      font-family: 'Roboto', sans-serif;
      background-color: #f8f9fa;
    }

    .card-header {
      background-color: #ffffff;
      font-weight: bold;
    }

    .service-card {
      margin-bottom: 20px;
    }

    .card-body {
      height: auto;
      overflow: hidden;
    }
    .bg-maroon {
      background-image: linear-gradient(to bottom, #d93c3c, #6e0a0a);
    }
  </style>
</body>

</html>


<body>
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Admin Panel</a>
    </nav>

    <% if (notification) { %>
      <div class="alert alert-success mt-4">
        <%= notification %>
      </div>
    <% } %>

    <div class="row">
      <% services.forEach((service) => { %>
        <div class="col-md-6">
          <div class="card service-card ">
            <div class="card-header bg-maroon text-white font-weight-bold">
              <%= service.title %>
            </div>
            <div class="card-body">
              <p class="card-text "><strong>ID:</strong>
                <%= service.id %>
              </p>
              <p class="card-text"><strong>Image:</strong>
                <%= service.image %>
              </p>
              <p class="card-text"><strong>Details:</strong>
                <%= service.details %>
              </p>

             
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editServiceModal-<%= service.id %>">
                Edit Service
              </button>

              <!-- Modal -->
              <div class="modal fade" id="editServiceModal-<%= service.id %>" tabindex="-1" role="dialog"
                aria-labelledby="editServiceModalLabel-<%= service.id %>" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="editServiceModalLabel-<%= service.id %>">Edit Service - <%= service.title %>
                      </h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form action="/updateService/<%= service.id %>" method="post">
                       
                        <div class="form-group">
                          <label for="newTitle-<%= service.id %>">New Title:</label>
                          <input type="text" class="form-control" id="newTitle-<%= service.id %>" name="newTitle">
                        </div>
                        <div class="form-group">
                          <label for="newImage">New Image URL:</label>
                          <input type="text" class="form-control" id="newImage" name="newImage">
                        </div>
                        <div class="form-group">
                          <label for="newDetails">New Details:</label>
                          <textarea class="form-control" id="newDetails" name="newDetails" rows="4"></textarea>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Update Service</button>
                      </form>
                      <form action="/deleteService/<%= service.id %>" method="post" class="mt-3">
                        <button type="submit" class="btn btn-danger">Delete Service</button>
                      </form>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>

    <div class="card service-card mt-5 ">
      <div class="card-header bg-maroon text-white font-weight-bold">
        <h2>Add New Service</h2>
      </div>
      <div class=" p-5  bg-white rounded">
        <form action="/addService" method="post">
          <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Title" required>
          </div>
          <div class="form-group">
            <label for="image">Image URL:</label>
            <input type="text" class="form-control" id="image" name="image" placeholder="Image URL" required>
          </div>
          <div class="form-group">
            <label for="details">Details:</label>
            <textarea class="form-control" id="details" name="details" rows="4" placeholder="Details" required></textarea>
          </div>
          <button type="submit" class="btn btn-success">Add Service</button>
        </form>
      </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </div>
</body>

</html>
