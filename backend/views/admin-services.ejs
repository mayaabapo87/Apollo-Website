<!DOCTYPE html>
<html>

<head>
  <title>Admin Panel</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>

<body>
  <div class="container">
    <div class="jumbotron text-center" style="padding: 30px;">
      <h3 class="display-5 text-dark font-weight-bold" style="font-size: 30px;">Manage Your Services</h3>
    </div>
  </div>
</body>

  <style>
    body {
      font-family: 'Roboto', sans-serif;
      background-color: #f8f9fa;
    }

    .card-header {
      background-color: #ffffff;
      font-weight: bold;
    }

    .service-card {
      margin-bottom: 20px;
    }

    .card-body {
      height: auto;
      overflow: hidden;
    }
    .bg-maroon {
      background-image: linear-gradient(to bottom, #d93c3c, #6e0a0a);
    }
  </style>
</body>

</html>


<body>
  <div class="container">
    <div class="row">
      <% services.forEach((service) => { %>
        <div class="col-md-6">
          <div class="card service-card ">
            <div class="card-header bg-maroon text-white font-weight-bold">
              <%= service.title %>
            </div>
            <div class="card-body">
              <p class="card-text "><strong>ID:</strong>
                <%= service.id %>
              </p>
              <p class="card-text"><strong>Image:</strong>
                <%= service.image %>
              </p>
              <p class="card-text"  style="text-align: justify;"><strong>Details:</strong>
                <%= service.details %>
              </p>

             
              <button type="button" class="btn btn-secondary bg-dark " data-toggle="modal" data-target="#editServiceModal-<%= service.id %>">
                Edit Service
              </button>

              <!-- Modal -->
              <div class="modal fade" id="editServiceModal-<%= service.id %>" tabindex="-1" role="dialog"
                aria-labelledby="editServiceModalLabel-<%= service.id %>" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="editServiceModalLabel-<%= service.id %>">Edit Service - <%= service.title %>
                      </h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form action="/updateService/<%= service.id %>" method="post">
                        <div class="form-group">
                          <label for="newTitle-<%= service.id %>">New Title:</label>
                          <input type="text" class="form-control" id="newTitle-<%= service.id %>" name="newTitle" value="<%= service.title %>">
                        </div>
                        <div class="form-group">
                          <label for="newImage">New Image Filename:</label>
                          <input type="text" class="form-control" id="newImage" name="newImage" value="<%= service.image %>">
                        </div>
                        <div class="form-group">
                          <label for="newDetails">New Details:</label>
                          <textarea class="form-control" id="newDetails" name="newDetails" rows="4"><%= service.details %></textarea>
                        </div>
                        <button type="submit" class="btn btn-secondary">Update Service</button>
                      </form>
                      <form action="/deleteService/<%= service.id %>" method="post" class="mt-3">
                        <button type="submit" class="btn btn-danger">Delete Service</button>
                      </form>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-danger bg-maroon" data-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>

    <div class="card service-card mt-5 ">
      <div class="card-header bg-maroon text-white font-weight-bold">
        <h2>Add New Service</h2>
      </div>
      <div class=" p-5  bg-white rounded">
        <form action="/addService" method="post">
          <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Title" required>
          </div>
          <div class="form-group">
            <label for="image">Image Filename:</label>
            <input type="text" class="form-control" id="image" name="image" placeholder="Image Filename" required>
          </div>
          <div class="form-group">
            <label for="details">Details:</label>
            <textarea class="form-control" id="details" name="details" rows="4" placeholder="Details" required></textarea>
          </div>
          <button type="submit" class="btn btn-secondary bg-dark " >Add Service </button>
        </form>
      </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </div>
</body>

</html>