        <!-- Modal for Add/Edit Partners -->
        <div class="modal fade" id="serviceModal" tabindex="-1" aria-labelledby="serviceModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header" id="serviceModalHeader">
                        <!-- Insert -->
                    </div>
                    <div class="modal-body" id="insertInModalBody">
                        <!-- Insert -->
                    </div>
                    <div class="modal-footer" id="insertInModalFooter">
                        <!-- Insert -->
                    </div>
                </div>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <script>
            let currentPage = 1;
            let searchTerm = '';
            const itemsPerPage = 10;

            $(document).ready(function () {
                function fetchServiceData() {
                    const urlParams = new URLSearchParams(window.location.search);

                    currentPage = parseInt(urlParams.get('page')) || currentPage;
                    searchTerm = urlParams.get('search') || searchTerm;
                    $('#searchInput').val(searchTerm);

                    $.get(`<%= BACKEND_URL %>/api/service/all?search=${searchTerm}&page=${currentPage}&itemsPerPage=${itemsPerPage}`, function (data) {
                        const services = data.services.services;
                        const totalPages = data.totalPages;
                        const totalItems = data.services.totalCount;

                        const tableBody = document.getElementById('service-table-body');
                        tableBody.innerHTML = '';

                        services.forEach(function (service) {
                            const createdAt = new Date(service.createdAt);
                            const year = createdAt.getFullYear();
                            const month = (createdAt.getMonth() + 1).toString().padStart(2, '0');
                            const day = createdAt.getDate().toString().padStart(2, '0');
                            const formattedDate = `${year}-${month}-${day}`;
                            let fileName = null;

                            if (service.iconPath !== null) {
                                fileName = service.iconPath.split('\\').pop();
                            }

                            const row = document.createElement('tr');
                            row.innerHTML = `
                                <td>${service.name}</td>
                                <td class="text-truncate"  style="max-width: 150px;">${service.description}</td>
                                <td>${formattedDate}</td>
                                <td class="text-center">
                                    <button class="btn btn-outline-success edit-button"
                                        data-id="${service.id}"
                                        data-name="${service.name}"
                                        data-description="${service.description}"

                                        data-bs-toggle="modal"
                                        data-bs-target="#serviceModal"
                                        data-icon-url="/files/icons/${fileName}">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" 
                                        class="bi bi-pencil-square" viewBox="0 0 16 16">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 
                                            2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 
                                            0 .196-.12l6.813-6.814z"/>
                                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 
                                            0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 
                                            1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                        </svg>
                                    </button>
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-outline-danger delete-button" 
                                        type="button" 
                                        data-id="${service.id}">
                                        Delete
                                    </button>
                                </td>
                            `;
                            tableBody.appendChild(row);
                        });

                        updatePagination(totalPages);
                    });
                }

                function updateURL() {
                    const urlParams = new URLSearchParams(window.location.search);
                    urlParams.set('page', currentPage);
                    urlParams.set('search', searchTerm);
                    history.pushState({}, '', `${window.location.pathname}?${urlParams}`);
                }

                $('#service-table-body').on('click', '.edit-button', function () {
                    let iconUrl = $(this).data('icon-url');
                    check = iconUrl.split('/').pop();
                    
                    if (check === "null"){
                        iconUrl = "<%= BACKEND_URL %>/assets/upload.svg"
                    }
                    let serviceId = $(this).data('id');
                    let serviceName = $(this).data('name');
                    let serviceDescription = $(this).data('description');

                    const insertInModalHeader = document.getElementById('serviceModalHeader');
                    insertInModalHeader.innerHTML = `
                        <h3>Edit Service</h3>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    `;

                    const insertInModalBody = document.getElementById('insertInModalBody');
                    insertInModalBody.innerHTML = `
                        <div class="container">
                            <div class="row">
                                <div class="col d-flex flex-column">
                                    <label for="floatingTextarea">Name</label>
                                    <div class="input-group my-1">
                                        <span class="input-group-text">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" 
                                            class="bi bi-person-workspace" viewBox="0 0 16 16">
                                                <path d="M4 16s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H4Zm4-5.95a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z"/>
                                                <path d="M2 1a2 2 0 0 0-2 2v9.5A1.5 1.5 0 0 0 1.5 14h.653a5.373 5.373 0 0 1 1.066-2H1V3a1 1 
                                                0 0 1 1-1h12a1 1 0 0 1 1 1v9h-2.219c.554.654.89 1.373 1.066 2h.653a1.5 1.5 0 0 0 1.5-1.5V3a2 
                                                2 0 0 0-2-2H2Z"/>
                                            </svg>
                                        </span>
                                        <input id="inputAddService" type="text" class="form-control" placeholder="Service" 
                                        aria-label="Service" aria-describedby="input-group-left">
                                    </div>
                                    <label for="floatingTextarea">Description</label>
                                    <textarea id="inputAddDescription" class="form-control h-100" placeholder="Write a description"></textarea>
                                </div>
                                <div class="col-4 d-flex flex-column mt-1">
                                    <label for="floatingTextarea">Icon</label>
                                    <div class="card h-100">
                                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                            <img id="selectedImage" src="${iconUrl}" class="card-img-top my-1" width="200" height="200">
                                            <label for="iconFile" class="btn btn-outline-dark">
                                                Upload an Icon
                                            </label>
                                            <input class="form-control" type="file" id="iconFile">                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;

                    const insertInModalFooter = document.getElementById('insertInModalFooter');
                    insertInModalFooter.innerHTML = '';
                    insertInModalFooter.innerHTML = `   
                        <button type="submit" class="btn btn-success service-edit-button">
                            Confirm
                        </button>
                        <button class="btn btn-outline-danger" data-bs-dismiss="modal">
                            Cancel
                        </button>
                    `;

                    const iconFile = document.getElementById("iconFile");
                    const selectedImage = document.getElementById("selectedImage");

                    iconFile.addEventListener("change", function () {
                        const file = iconFile.files[0];

                        if (file) {
                            if (file.type.startsWith("image/")) {
                                const reader = new FileReader();
                                reader.onload = function (e) {
                                    selectedImage.src = e.target.result;
                                };

                                reader.readAsDataURL(file);
                            } else {
                                alert("Please select an image file.");
                                iconFile.value = "";
                            }
                        }
                    });

                    $('.service-edit-button').data('service-id', serviceId);
                    $('#inputAddService').val(serviceName);
                    $('#inputAddDescription').val(serviceDescription);

                });

                $('#insertInModalFooter').on('click', '.service-edit-button', function () {
                    const serviceId = $('.service-edit-button').data('service-id');
                    const name = $('#inputAddService').val();
                    const description = $('#inputAddDescription').val();

                    const fileInput = document.getElementById('iconFile');
                    const file = fileInput.files[0];

                    const formData = new FormData();
                    formData.append('name', name);
                    formData.append('description', description);
                    formData.append('fileInput', file);

                    const formDataJSON = {};
                    formData.forEach((value, key) => {
                    formDataJSON[key] = value;
                    });

                    $.ajax({
                        url: `<%= BACKEND_URL %>/api/service/update/${serviceId}`,
                        type: 'PUT',
                        data: formData,
                        processData: false, 
                        contentType: false, 
                        success: function (response) {
                            console.log('Service updated successfully:', response);
                            $('#serviceModal').modal('hide');
                            fetchServiceData();
                        },
                        error: function (error) {
                            console.error('Error updating service:', error);
                        }
                    });
                });

                $('#serviceCaption').on('click', '.add-button', function () {
                    const insertInModalHeader = document.getElementById('serviceModalHeader');
                    insertInModalHeader.innerHTML = `
                        <h3>Add Service</h3>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    `;

                    const insertInModalBody = document.getElementById('insertInModalBody');
                    insertInModalBody.innerHTML = `
                        <div class="container">
                            <div class="row">
                                <div class="col d-flex flex-column">
                                    <label for="floatingTextarea">Name</label>
                                    <div class="input-group my-1">
                                        <span class="input-group-text">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-workspace" viewBox="0 0 16 16">
                                                <path d="M4 16s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H4Zm4-5.95a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z"/>
                                                <path d="M2 1a2 2 0 0 0-2 2v9.5A1.5 1.5 0 0 0 1.5 14h.653a5.373 5.373 0 0 1 1.066-2H1V3a1 1 
                                                0 0 1 1-1h12a1 1 0 0 1 1 1v9h-2.219c.554.654.89 1.373 1.066 2h.653a1.5 1.5 0 0 0 1.5-1.5V3a2 
                                                2 0 0 0-2-2H2Z"/>
                                            </svg>
                                        </span>
                                        <input id="inputAddService" type="text" class="form-control" placeholder="Write a name" aria-label="Service" aria-describedby="input-group-left">
                                    </div>
                                    <label for="floatingTextarea">Description</label>
                                    <textarea id="inputAddDescription" class="form-control h-100" placeholder="Write a description" style="height: 200px"></textarea>
                                </div>
                                <div class="col-4 d-flex flex-column mt-1">
                                    <label for="floatingTextarea">Icon</label>
                                    <div class="card h-100">
                                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                            <img id="selectedImage" src="<%= BACKEND_URL %>/assets/upload.svg" class="card-img-top my-1" width="200" height="200">
                                            <label for="iconFile" class="btn btn-outline-dark">
                                                Upload an Icon
                                            </label>
                                            <input class="form-control" type="file" id="iconFile">                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;

                    const insertInModalFooter = document.getElementById('insertInModalFooter');
                    insertInModalFooter.innerHTML = '';
                    insertInModalFooter.innerHTML = `
                        <button type="submit" class="btn btn-success service-add-button">
                            Confirm
                        </button>
                        <button class="btn btn-outline-danger" data-bs-dismiss="modal">
                            Cancel
                        </button>
                    `;

                    const iconFile = document.getElementById("iconFile");
                    const selectedImage = document.getElementById("selectedImage");

                    iconFile.addEventListener("change", function () {
                        const file = iconFile.files[0];

                        if (file) {
                            if (file.type.startsWith("image/")) {
                                const reader = new FileReader();
                                reader.onload = function (e) {
                                    selectedImage.src = e.target.result;
                                };
                                reader.readAsDataURL(file);
                            } else {
                                alert("Please select an image file.");
                                iconFile.value = "";
                            }
                        }
                    });
                });

                $('#insertInModalFooter').on('click', '.service-add-button', function () {
                    const name = $('#inputAddService').val();
                    const description = $('#inputAddDescription').val();
      
                    const fileInput = document.getElementById('iconFile');
                    const file = fileInput.files[0];

                    const formData = new FormData();
                    formData.append('name', name);
                    formData.append('description', description);
                    formData.append('fileInput', file);

                    $.ajax({
                        url: '<%= BACKEND_URL %>/api/service/create',
                        type: 'POST',
                        data: formData,
                        processData: false, 
                        contentType: false, 
                        success: function (response) {
                            console.log('Service added successfully:', response);
                            $('#serviceModal').modal('hide');
                            fetchServiceData();
                        },
                        error: function (error) {
                            console.error('Error adding service:', error);
                        }
                    });
                });

                $('#searchForm').submit(function (e) {
                    e.preventDefault();
                    searchTerm = $('#searchInput').val();
                    currentPage = 1;
                    updateURL();
                    fetchServiceData();
                });

                $('#resetSearchButton').click(function () {
                    $('#searchInput').val('');
                    searchTerm = $('#searchInput').val();
                    currentPage = 1;
                    updateURL();
                    fetchServiceData();
                });

                function changePage(page) {
                    currentPage = page;
                    const urlParams = new URLSearchParams(window.location.search);
                    urlParams.set('page', page);
                    const newURL = `${window.location.pathname}?${urlParams}`;
                    window.history.pushState({ path: newURL }, '', newURL);
                    fetchServiceData(page, searchTerm);
                }

                function updatePagination(totalPages) {
                    const pagination = document.getElementById('pagination');
                    pagination.innerHTML = '';

                    const previousItem = document.createElement('li');
                    previousItem.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
                    const previousLink = document.createElement('a');
                    previousLink.className = 'page-link';
                    previousLink.href = 'javascript:void(0);';
                    previousLink.textContent = '«';
                    previousLink.onclick = () => changePage(currentPage - 1);
                    previousItem.appendChild(previousLink);
                    pagination.appendChild(previousItem);

                    for (let i = 1; i <= totalPages; i++) {
                        const pageItem = document.createElement('li');
                        pageItem.className = `page-item ${i === currentPage ? 'active' : ''}`;
                        const pageLink = document.createElement('a');
                        pageLink.className = 'page-link';
                        pageLink.href = 'javascript:void(0);';
                        pageLink.textContent = i;
                        pageLink.onclick = () => changePage(i);
                        pageItem.appendChild(pageLink);
                        pagination.appendChild(pageItem);
                    }

                    const nextItem = document.createElement('li');
                    nextItem.className = `page-item ${currentPage === totalPages ? 'disabled' : ''}`;
                    const nextLink = document.createElement('a');
                    nextLink.className = 'page-link';
                    nextLink.href = 'javascript:void(0);';
                    nextLink.textContent = '»';
                    nextLink.onclick = () => changePage(currentPage + 1);
                    nextItem.appendChild(nextLink);
                    pagination.appendChild(nextItem);
                }

                $('#service-table-body').on('click', '.delete-button', function () {
                    const serviceId = $(this).data('id');
                    const rowCount = $('#service-table-body tr').length;

                    $.ajax({
                        url: `<%= BACKEND_URL %>/api/service/delete/${serviceId}`,
                        type: 'DELETE',
                        success: function () {
                            fetchServiceData();

                            if ($('#service-table-body tr').length === 0) {
                                updateURL();
                                fetchServiceData();
                            }
                            if (rowCount === 1 && currentPage!==1) {
                                changePage(currentPage - 1);
                            }
                        },
                        error: function (error) {
                            console.error('Error deleting service:', error);
                        },
                    });
                });

                fetchServiceData();
            });
        </script>

    </body>
</html>

