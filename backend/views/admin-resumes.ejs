<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Resumes</title>

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

        <!-- Bootstrap JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous">
        </script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.8.335/pdf.js"></script>
    </head>

    <body>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container">
                <div class="collapse navbar-collapse show" id="navbarDark">
                    <ul class="navbar-nav me-auto mb-2 mb-xl-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="/resume">
                                Resumes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/career">
                                Careers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/partner">
                                Partners
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/story">
                                Stories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/service">
                                Services
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active " href="/project">
                                Projects
                            </a>
                        </li>
                    </ul>
                    <form class="d-flex" id="searchForm">
                        <input class="form-control mx-1" type="search" placeholder="Search" aria-label="Search"
                            id="searchInput" name="search">
                        <button class="btn btn-outline-light mx-1" type="submit" id="searchButton">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search"viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 
                                1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                            </svg>
                        </button>
                        <button class="btn btn-danger mx-1" type="button" id="resetSearchButton">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-x-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 
                                2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 
                                5.354a.5.5 0 0 1 0-.708z" />
                            </svg>
                        </button>
                    </form>
                </div>
            </div>
        </nav>

        <div class="container mt-3">
            <table class="table table-hover">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Number</th>
                        <th scope="col">Position</th>
                        <th scope="col">Date</th>
                        <th scope="col" class="text-center">Resume</th>
                        <th scope="col" class="text-center">Delete</th>
                    </tr>
                </thead>
                <tbody id="resume-table-body">
                    <!-- Resume Data -->
                </tbody>
            </table>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center" id="pagination">
                    <!-- Pagination -->
                </ul>
            </nav>
        </div>

        <!-- Modals for PDFs -->
        <div class="modal fade" id="pdfModal" tabindex="-1" aria-labelledby="pdfModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-fullscreen">
                <div class="modal-content">
                    <div class="modal-header m-0">
                        <h6>Resume</h6>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="insertInMe">
                        <!-- Insert pdf -->
                    </div>
                </div>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <script>
            let currentPage = 1;
            let searchTerm = '';
            const itemsPerPage = 10;

            $(document).ready(function () {
                function fetchResumeData() {
                    const urlParams = new URLSearchParams(window.location.search);

                    currentPage = parseInt(urlParams.get('page')) || currentPage;
                    searchTerm = urlParams.get('search') || searchTerm;
                    $('#searchInput').val(searchTerm);

                    // Fetch and display resume data
                    $.get(`<%= BACKEND_URL %>/api/resume/all?search=${searchTerm}&page=${currentPage}&itemsPerPage=${itemsPerPage}`, function (data) {
                        const resumes = data.resumes.resumes;
                        const totalPages = data.totalPages;
                        const totalItems = data.resumes.totalCount;

                        const tableBody = document.getElementById('resume-table-body');
                        tableBody.innerHTML = '';

                        resumes.forEach(function (resume) {
                            const createdAt = new Date(resume.createdAt);
                            const year = createdAt.getFullYear();
                            const month = (createdAt.getMonth() + 1).toString().padStart(2, '0');
                            const day = createdAt.getDate().toString().padStart(2, '0');
                            const formattedDate = `${year}-${month}-${day}`;
                            const fileName = resume.resumePath.split('\\').pop();
                            const row = document.createElement('tr');
                            row.innerHTML = `
                                <td>${resume.name}</td>
                                <td>${resume.email}</td>
                                <td>${resume.number}</td>
                                <td>${resume.position}</td>
                                <td>${formattedDate}</td>
                                <td class="text-center">
                                    <button class="btn btn-outline-dark resume-button"
                                        data-id="${fileName}"
                                        data-bs-toggle="modal"
                                        data-bs-target="#pdfModal"
                                        data-pdf-url="/files/resumes/${fileName}">
                                        Resume
                                    </button>
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-outline-danger delete-button" 
                                        type="button" 
                                        data-id="${resume.id}">
                                        Delete
                                    </button>
                                </td>
                            `;
                            tableBody.appendChild(row);
                        });

                        updatePagination(totalPages);
                    });
                }

                function updateURL() {
                    const urlParams = new URLSearchParams(window.location.search);
                    urlParams.set('page', currentPage);
                    urlParams.set('search', searchTerm);
                    history.pushState({}, '', `${window.location.pathname}?${urlParams}`);
                }


                // Handle "Resume" button click
                $('#resume-table-body').on('click', '.resume-button', function () {
                    const pdfUrl = $(this).data('pdf-url');
                    const insertInMe = document.getElementById('insertInMe');

                    const embedElement = document.createElement('embed');
                    embedElement.src = pdfUrl;
                    embedElement.type = 'application/pdf';
                    embedElement.width = '100%';
                    embedElement.height = '100%';

                    insertInMe.innerHTML = '';
                    insertInMe.appendChild(embedElement);

                    // Show the modal
                });

                $('#searchForm').submit(function (e) {
                    e.preventDefault();
                    searchTerm = $('#searchInput').val();
                    currentPage = 1;
                    updateURL();
                    fetchResumeData();
                });

                $('#resetSearchButton').click(function () {
                    $('#searchInput').val('');
                    searchTerm = $('#searchInput').val();
                    currentPage = 1;
                    updateURL();
                    fetchResumeData();
                });

                // Function to change the current page
                function changePage(page) {
                    currentPage = page;
                    const urlParams = new URLSearchParams(window.location.search);
                    urlParams.set('page', page);
                    const newURL = `${window.location.pathname}?${urlParams}`;
                    window.history.pushState({ path: newURL }, '', newURL);
                    fetchResumeData(page, searchTerm);
                }

                // Updated updatePagination function
                function updatePagination(totalPages) {
                    const pagination = document.getElementById('pagination');
                    pagination.innerHTML = '';

                    const previousItem = document.createElement('li');
                    previousItem.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
                    const previousLink = document.createElement('a');
                    previousLink.className = 'page-link';
                    previousLink.href = 'javascript:void(0);';
                    previousLink.textContent = '«';
                    previousLink.onclick = () => changePage(currentPage - 1);
                    previousItem.appendChild(previousLink);
                    pagination.appendChild(previousItem);

                    for (let i = 1; i <= totalPages; i++) {
                        const pageItem = document.createElement('li');
                        pageItem.className = `page-item ${i === currentPage ? 'active' : ''}`;
                        const pageLink = document.createElement('a');
                        pageLink.className = 'page-link';
                        pageLink.href = 'javascript:void(0);';
                        pageLink.textContent = i;
                        pageLink.onclick = () => changePage(i);
                        pageItem.appendChild(pageLink);
                        pagination.appendChild(pageItem);
                    }

                    const nextItem = document.createElement('li');
                    nextItem.className = `page-item ${(currentPage === totalPages) ? 'disabled' : ''}`;
                    const nextLink = document.createElement('a');
                    nextLink.className = 'page-link';
                    nextLink.href = 'javascript:void(0);';
                    nextLink.textContent = '»';
                    nextLink.onclick = () => changePage(currentPage + 1);
                    nextItem.appendChild(nextLink);
                    pagination.appendChild(nextItem);
                }


                $('#resume-table-body').on('click', '.delete-button', function () {
                    const resumeId = $(this).data('id');
                    const rowCount = $('#resume-table-body tr').length;

                    $.ajax({
                        url: `<%= BACKEND_URL %>/api/resume/delete/${resumeId}`,
                        type: 'DELETE',
                        success: function () {
                            fetchResumeData();

                            if ($('#resume-table-body tr').length === 0) {
                                updateURL();
                                fetchResumeData();
                            }
                            if (rowCount === 1 && currentPage!==1) {
                                changePage(currentPage - 1);
                            }
                        },
                        error: function (error) {
                            console.error('Error deleting resume:', error);
                        },
                    });
                });

                fetchResumeData();

            });
        </script>

    </body>
</html>

