        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <script>
            let currentPage = 1;
            let searchTerm = '';
            const itemsPerPage = 10;
            let filterPosition = '';
            let positionList = {};

            $(document).ready(function () {
                function fetchResumeData() {
                    const urlParams = new URLSearchParams(window.location.search);

                    currentPage = parseInt(urlParams.get('page')) || currentPage;
                    searchTerm = urlParams.get('search') || searchTerm;
                    filterPosition = urlParams.get('filter') || filterPosition;
                    $('#searchInput').val(searchTerm);

                    // Fetch and display resume data
                    $.get(`<%= BACKEND_URL %>/api/resume/all?search=${searchTerm}&page=${currentPage}&itemsPerPage=${itemsPerPage}&filter=${filterPosition}`, function (data) {
                        const resumes = data.resumes;
                        const totalPages = data.totalPages;
                        const totalItems = data.totalResumes;
                        const tableBody = document.getElementById('resume-table-body');
                        tableBody.innerHTML = '';

                        resumes.forEach(function (resume) {
                            const createdAt = new Date(resume.createdAt);
                            const year = createdAt.getFullYear();
                            const month = (createdAt.getMonth() + 1).toString().padStart(2, '0');
                            const day = createdAt.getDate().toString().padStart(2, '0');
                            const formattedDate = `${year}-${month}-${day}`;
                            const fileName = resume.resumePath.split('\\').pop();
                            const row = document.createElement('tr');
                            row.innerHTML = `
                                <td>${resume.name}</td>
                                <td>${resume.email}</td>
                                <td>${resume.number}</td>
                                <td>${resume.position}</td>
                                <td>${formattedDate}</td>
                                <td class="text-center">
                                    <button class="btn btn-outline-dark resume-button"
                                        data-id="${fileName}"
                                        data-bs-toggle="modal"
                                        data-bs-target="#pdfModal"
                                        data-pdf-url="/files/resumes/${fileName}">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-person" viewBox="0 0 16 16">
                                            <path d="M11 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                                            <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2v9.255S12 12 8 12s-5 1.755-5 1.755V2a1 1 0 0 1 1-1h5.5v2z"/>
                                        </svg>
                                    </button>
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-outline-danger delete-button" 
                                        type="button" 
                                        data-id="${resume.id}">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                            <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 
                                            0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 
                                            2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 
                                            1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 
                                            0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 
                                            0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                                        </svg>
                                    </button>
                                </td>
                            `;
                        tableBody.appendChild(row);

                        });

                        const filterResetItems = document.getElementById('dropDownResumePositions');
                            filterResetItems.innerHTML = '';
                            const dropResetList = document.createElement('li');
                            dropResetList.innerHTML = `
                            <a class="dropdown-item" href="<%= BACKEND_URL %>/resume?search=${searchTerm}&page=${currentPage}&itemsPerPage=${itemsPerPage}&filter=">All</a>
                            `;
                        filterResetItems.appendChild(dropResetList);

                        const filterItems = document.getElementById('dropDownResumePositions');
                            positionList.forEach(function (position) {
                            const dropList = document.createElement('li');
                            dropList.innerHTML = `
                            <a class="dropdown-item" href="<%= BACKEND_URL %>/resume?search=${searchTerm}&page=${currentPage}&itemsPerPage=${itemsPerPage}&filter=${position}"${position}">${position}</a>
                            `;
                        filterItems.appendChild(dropList);
                        });

                        updatePagination(totalPages);
                    });
                }

                //update list of positions
                function fetchPositionData(){
                    $.get(`<%= BACKEND_URL %>/api/resume/all`, function (data) {
                        positionList = data.distinctPositions
                    });
                }

                function updateURL() {
                    const urlParams = new URLSearchParams(window.location.search);
                    urlParams.set('page', currentPage);
                    urlParams.set('search', searchTerm);
                    urlParams.set('filter', filterPosition);

                    history.pushState({}, '', `${window.location.pathname}?${urlParams}`);
                }

                // Handle "Resume" button click
                $('#resume-table-body').on('click', '.resume-button', function () {
                    const pdfUrl = $(this).data('pdf-url');
                    const insertInMe = document.getElementById('insertInMe');

                    const embedElement = document.createElement('embed');
                    embedElement.src = pdfUrl;
                    embedElement.type = 'application/pdf';
                    embedElement.width = '100%';
                    embedElement.height = '100%';

                    insertInMe.innerHTML = '';
                    insertInMe.appendChild(embedElement);

                    // Show the modal
                });

                $('#searchForm').submit(function (e) {
                    e.preventDefault();
                    searchTerm = $('#searchInput').val();
                    currentPage = 1;
                    updateURL();
                    fetchResumeData();
                });

                $('#resetSearchButton').click(function () {
                    $('#searchInput').val('');
                    searchTerm = $('#searchInput').val();
                    currentPage = 1;
                    filterPosition ='';
                    updateURL();
                    fetchPositionData();
                    fetchResumeData();
                });

                // Function to change the current page
                function changePage(page) {
                    currentPage = page;
                    const urlParams = new URLSearchParams(window.location.search);
                    urlParams.set('page', page);
                    const newURL = `${window.location.pathname}?${urlParams}`;
                    window.history.pushState({ path: newURL }, '', newURL);
                    fetchResumeData(page, searchTerm, filterPosition);
                }

                // Updated updatePagination function
                function updatePagination(totalPages) {
                    const pagination = document.getElementById('pagination');
                    pagination.innerHTML = '';

                    const previousItem = document.createElement('li');
                    previousItem.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
                    const previousLink = document.createElement('a');
                    previousLink.className = 'page-link';
                    previousLink.href = 'javascript:void(0);';
                    previousLink.textContent = '«';
                    previousLink.onclick = () => changePage(currentPage - 1);
                    previousItem.appendChild(previousLink);
                    pagination.appendChild(previousItem);

                    for (let i = 1; i <= totalPages; i++) {
                        const pageItem = document.createElement('li');
                        pageItem.className = `page-item ${i === currentPage ? 'active' : ''}`;
                        const pageLink = document.createElement('a');
                        pageLink.className = 'page-link';
                        pageLink.href = 'javascript:void(0);';
                        pageLink.textContent = i;
                        pageLink.onclick = () => changePage(i);
                        pageItem.appendChild(pageLink);
                        pagination.appendChild(pageItem);
                    }

                    const nextItem = document.createElement('li');
                    nextItem.className = `page-item ${(currentPage === totalPages) ? 'disabled' : ''}`;
                    const nextLink = document.createElement('a');
                    nextLink.className = 'page-link';
                    nextLink.href = 'javascript:void(0);';
                    nextLink.textContent = '»';
                    nextLink.onclick = () => changePage(currentPage + 1);
                    nextItem.appendChild(nextLink);
                    pagination.appendChild(nextItem);
                }


                $('#resume-table-body').on('click', '.delete-button', function () {
                    const resumeId = $(this).data('id');
                    const rowCount = $('#resume-table-body tr').length;

                    $.ajax({
                        url: `<%= BACKEND_URL %>/api/resume/delete/${resumeId}`,
                        type: 'DELETE',
                        success: function () {
                            fetchPositionData()
                            fetchResumeData();

                            if ($('#resume-table-body tr').length === 0) {
                                fetchPositionData()
                                updateURL();
                                fetchResumeData();
                            }
                            if (rowCount === 1 && currentPage!==1) {
                                changePage(currentPage - 1);
                            }
                        },
                        error: function (error) {
                            console.error('Error deleting resume:', error);
                        },
                    });
                });

                //Initialize Data
                fetchPositionData()
                fetchResumeData();

            });

            document.getElementById('logout-button').addEventListener('click', function() {
                $.ajax({
                url: `<%= BACKEND_URL %>/api/logout/`,
                type: 'GET',
                success: function (response) {
                    console.log('Logged out successfully.');
                    window.location.href = '/login';
                },
                error: function (xhr, textStatus, error) {
                    console.error('Error logging out:', error);
                }
                });
            });

        </script>

